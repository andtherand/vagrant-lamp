{
    "name": "lamp",
    "description": "installs and configures a lamp stack with some additional utils like git",
    "chef_type": "role",
    "json_class": "Chef::Role",

    "default_attributes": {
        "php": {
            "ext_conf_dir": "/etc/php5/apache2/conf.d"
        },

        "xdebug": {
            "ini_name": "20-xdebug.ini"
        }
    },

    //
    "run_list": [
        "role[tools]",
        "role[mysql]",
        "role[php]",
        "recipe[php::module_mysql]",
        "role[apache]",
        "recipe[apache2::mod_php5]",
        "recipe[xdebug]"
    ]


}